<?xml version="1.0" encoding="utf-8"?>
<ontology name="CookingAppOntology">
  <action name="omelette_recipe_action"/>
  <action name="fries_recipe_action"/>

  <sort name="recipe"/>
  <sort name="ingredient" dynamic="true"/>

  <predicate name="current_recipe" sort="recipe"/>
  <predicate name="which_ingredient" sort="ingredient"/>
  <predicate name="amount_ingredient" sort="string"/>

  <individual name="butter" sort="ingredient"/>
  <individual name="egg" sort="ingredient"/>

  <individual name="omelette_recipe" sort="recipe"/>
  <individual name="fries_recipe" sort="recipe"/>
</ontology>
